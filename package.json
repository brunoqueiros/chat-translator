    "semantic-ui-css": "^2.1.4",
    "superagent": "^1.4.0"
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "watchify": "^3.4.0",
    "live-server": "^0.8.1"
  },
  "babel": {
    "optional": [
      "es7.decorators",
      "es7.classProperties"
